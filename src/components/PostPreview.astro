---
import type { Post } from "../lib/type";
import { formatPublishedOn } from "../lib/util";

export interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<li class="py-8 sm:py-12 space-y-6 border-t border-neutral-700">
  <div>
    <h2
      class="text-amber-600 text-2xl font-bold tracking-tight hover:text-amber-650"
    >
      <a href={`/posts/${post.slug}`}>{post.data.title}</a>
    </h2>
    <div class="mt-2 text-neutral-200">
      {formatPublishedOn(post.data.publishedOn)}
    </div>
  </div>
  <div class="prose text-neutral-400">{post.data.description}</div>
  <div>
    <a href={`/posts/${post.slug}`} class="hover:text-amber-600"> Read &rarr;</a>
  </div>
</li>
