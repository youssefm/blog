---
import Layout from "layouts/BaseLayout.astro";
import type { Post } from "lib/type";

import AboutMe from "./AboutMe.astro";
import PaginationBar from "./PaginationBar.astro";
import PostList from "./PostList.astro";

export interface Props {
  posts: Post[];
  pageNumber: number;
  pageCount: number;
}

const { posts, pageNumber, pageCount } = Astro.props;
---

<Layout
  title="Youssef Moussaoui's blog"
  description="Long-form chronicles of my adventures building software"
>
  <AboutMe />
  <PostList posts={posts} />
  {
    pageCount > 1 && (
      <PaginationBar pageNumber={pageNumber} pageCount={pageCount} />
    )
  }
</Layout>
