---
import type { Post } from "../lib/types";
import { formatPublishedOn, stripSuffix } from "../lib/util";

export interface Props {
  post: Post;
}

const { post } = Astro.props;

const postUrl = stripSuffix(post.url, ".html");
---

<li class="py-8 sm:py-12 space-y-6 border-t border-neutral-700">
  <div>
    <h2 class="text-amber-600 text-2xl font-bold tracking-tight">
      <a href={postUrl}>{post.frontmatter.title}</a>
    </h2>
    <div class="mt-2 text-neutral-200">
      {formatPublishedOn(post.frontmatter.publishedOn)}
    </div>
  </div>
  <div class="prose text-neutral-400">{post.frontmatter.description}</div>
  <div>
    <a href={postUrl} class="hover:text-amber-600"> Read &rarr;</a>
  </div>
</li>
