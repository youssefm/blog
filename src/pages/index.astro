---
import type { Post } from "../lib/types";
import { sortBy } from "../lib/util";
import Layout from "../layouts/BaseLayout.astro";
import AboutMe from "../components/AboutMe.astro";
import PostList from "../components/PostList.astro";

let posts: Post[] = await Astro.glob("./posts/*.{md,mdx}");
posts = posts.filter((post) => !post.frontmatter.draft);
sortBy(posts, (post) => post.frontmatter.publishedOn, true);
---

<Layout
  title="Youssef Moussaoui's blog"
  description="Long-form chronicles of my adventures building software"
>
  <AboutMe />
  <PostList posts={posts} />
</Layout>
